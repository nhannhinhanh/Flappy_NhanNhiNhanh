<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Hình đại diện, Tên và vị trí -->
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thành Nhân"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <!-- Thông tin liên hệ -->
        <TextView
            android:id="@+id/tvContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: 21522404@gm.uit.edu.vn\nPhone: 0123456789\nAddress: 123 Main Street, City"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>

        <!-- Học vấn -->
        <TextView
            android:id="@+id/tvEducationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bachelor's in Computer Science, XYZ University (2015-2019)"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Kinh nghiệm -->
        <TextView
            android:id="@+id/tvExperienceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developer at ABC Company (2020-Present)\n- Developed multiple Android applications using Kotlin\n- Collaborated with cross-functional teams"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Kỹ năng -->
        <TextView
            android:id="@+id/tvSkillsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kotlin, Java, Android SDK, Git, RESTful APIs"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Liên hệ -->
        <TextView
            android:id="@+id/tvAdditional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More details available upon request."
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 Your Name. All rights reserved."
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>